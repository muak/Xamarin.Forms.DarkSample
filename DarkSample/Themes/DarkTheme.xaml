<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="DarkSample.DarkTheme">

    <!-- アプリ全体の背景色 -->
	<Color x:Key="AppBackground">#000000</Color>
	<!-- アクセントカラー -->
	<Color x:Key="AccentColor">#E6B917</Color>
	<!-- 非アクティブカラー -->
	<Color x:Key="DisabledColor">#666155</Color>
	<!-- タイトルテキストカラー -->
	<Color x:Key="TitleTextColor">#D9C684</Color>
	<!-- 薄い背景色1 -->
	<Color x:Key="PaleBackColorPrimary">#1A1A19</Color>
	<!-- 薄い背景色2 -->
	<Color x:Key="PaleBackColorSecondary">#F2EDDA</Color>
	<!-- 選択背景色 -->
	<Color x:Key="SelectedBackColor">#20FFBF00</Color>
	<!-- 濃い文字色 -->
	<Color x:Key="DeepTextColor">#FFFFFF</Color>
	<!-- 通常文字色 -->
	<Color x:Key="NormalTextColor">#E6E6E6</Color>
	<!-- 薄い文字色 -->
	<Color x:Key="PaleTextColor">#CCCCCC</Color>
	<!-- 強調文字色 -->
	<Color x:Key="EmphasisTextColor">#FF9300</Color>
	<!-- もっと薄い文字色 -->
	<Color x:Key="MorePaleTextColor">#999999</Color>
	<!-- Tab背景色-->
	<Color x:Key="BarBackgroundColor">#0A0A0A</Color>
	<!-- ダイアログ -->
	<Color x:Key="DialogBack">#1A1A19</Color>
	<!-- 透過背景 -->
	<Color x:Key="TransBack">#F0000000</Color>
</ResourceDictionary>
