<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="DarkSample.LightTheme">

    <!-- アプリ全体の背景色 -->
	<Color x:Key="AppBackground">#ffffff</Color>
	<!-- アクセントカラー -->
	<Color x:Key="AccentColor">#FFBF00</Color>
	<!-- 非アクティブカラー -->
	<Color x:Key="DisabledColor">#E6DAB9</Color>
	<!-- タイトルテキストカラー -->
	<Color x:Key="TitleTextColor">#CC9900</Color>
	<!-- 薄い背景色1 -->
	<Color x:Key="PaleBackColorPrimary">#F2EFE6</Color>
	<!-- 薄い背景色2 -->
	<Color x:Key="PaleBackColorSecondary">#F2EDDA</Color>
	<!-- 選択背景色 -->
	<Color x:Key="SelectedBackColor">#20FFBF00</Color>
	<!-- 濃い文字色 -->
	<Color x:Key="DeepTextColor">#333333</Color>
	<!-- 通常文字色 -->
	<Color x:Key="NormalTextColor">#666666</Color>
	<!-- 薄い文字色 -->
	<Color x:Key="PaleTextColor">#999999</Color>
	<!-- もっと薄い文字色 -->
	<Color x:Key="MorePaleTextColor">#B2B2B2</Color>
	<!-- 強調文字色 -->
	<Color x:Key="EmphasisTextColor">#FF0000</Color>
	<!-- Tab背景色-->
	<Color x:Key="BarBackgroundColor">#F7F7F7</Color>
	<!-- ダイアログ -->
	<Color x:Key="DialogBack">#FFFFFF</Color>
	<!-- 透過背景 -->
	<Color x:Key="TransBack">#F0FFFFFF</Color>
</ResourceDictionary>
